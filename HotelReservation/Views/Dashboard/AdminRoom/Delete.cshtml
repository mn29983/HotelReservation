@model HotelReservation.Models.Room

<h2>Delete Room</h2>

<div>
    <h4>Are you sure you want to delete this room?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Room Number</dt>
        <dd class="col-sm-10">@Model.RoomNumber</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Available</dt>
        <dd class="col-sm-10">@Model.Available</dd>

        <dt class="col-sm-2">Available From</dt>
        <dd class="col-sm-10">@Model.AvailableFrom</dd>

        <dt class="col-sm-2">Available To</dt>
        <dd class="col-sm-10">@Model.AvailableTo</dd>

        <dt class="col-sm-2">Pictures</dt>
    </dl>

        <img src="@Model.PictureUrl1" class="card-img-top custom-img-delete" alt="Picture" />
        <img src="@Model.PictureUrl2" class="card-img-top custom-img-delete" alt="Picture" />
        <img src="@Model.PictureUrl3" class="card-img-top custom-img-delete" alt="Picture" />

    <form asp-action="Delete" asp-route-id="@Model.RoomId">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="AllRooms" class="btn btn-secondary">Cancel</a>
    </form>
</div>
