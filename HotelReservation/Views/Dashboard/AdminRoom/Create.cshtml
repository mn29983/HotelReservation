@model HotelReservation.Models.Room

<h2>Create Room</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PictureUrl1"></label>
        <input asp-for="PictureUrl1" class="form-control" />
        <span asp-validation-for="PictureUrl1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PictureUrl2"></label>
        <input asp-for="PictureUrl2" class="form-control" />
        <span asp-validation-for="PictureUrl2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PictureUrl3"></label>
        <input asp-for="PictureUrl3" class="form-control" />
        <span asp-validation-for="PictureUrl3" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Available"></label>
        <input asp-for="Available" class="form-control" />
        <span asp-validation-for="Available" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableFrom"></label>
        <input asp-for="AvailableFrom" class="form-control" />
        <span asp-validation-for="AvailableFrom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableTo"></label>
        <input asp-for="AvailableTo" class="form-control" />
        <span asp-validation-for="AvailableTo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
