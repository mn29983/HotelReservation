@model IEnumerable<HotelReservation.Models.Room>

<h2>All Rooms</h2>

<table class="table">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Type</th>
            <th>Description</th>
            <th>Capacity</th>
            <th>Price</th>
            <th>Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Type</td>
                <td>@room.Description</td>
                <td>@room.Capacity</td>
                <td>@room.Price</td>
                <td>@room.Available</td>
            </tr>
        }
    </tbody>
</table>
