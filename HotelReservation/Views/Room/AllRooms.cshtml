@model IEnumerable<HotelReservation.Models.Room>

<h2>Available Rooms</h2>

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var room in Model.Where(r => r.Available))
    {
        <div class="col">
            <div class="card h-100 d-flex flex-column">
                <img src="@room.PictureUrl1" class="card-img-top custom-img-size"
                     alt="Picture" />
                <div class="card-body flex-grow-1">
                    <h5 class="card-title">Room @room.RoomNumber</h5>
                    <p class="card-text">
                        Type: @room.Type <br />
                        Description: @room.Description <br />
                        Capacity: @room.Capacity <br />
                        Price: @room.Price <br />
                    </p>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("RoomDetails", "Room", new { id = room.RoomId })" class="btn btn-primary">Learn more</a>
                </div>
            </div>
        </div>
    }
</div>
