@model HotelReservation.Models.ViewModels.AddRoomRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Room</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Room Number</label>
            <input type="text" class="form-control" id="rnmb" asp-for="RoomNumber"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Type</label>
            <input type="text" class="form-control" id="type" asp-for="Type" />
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" id="description" asp-for="Description" />
        </div>
        <div class="mb-3">
            <label class="form-label">Capacity</label>
            <input type="text" class="form-control" id="capacity" asp-for="Capacity" />
        </div>
        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" id="price" asp-for="Price" />
        </div>
        <div class="mb-3">
            <label class="form-check-label">Pictures</label>
            <input type="string" class="form-check-input" id="pictures" asp-for="Pictures" />
        </div>
        <div class="mb-3">
            <label class="form-check-label">Available</label>
            <input type="checkbox" class="form-check-input" id="available" asp-for="Available" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>