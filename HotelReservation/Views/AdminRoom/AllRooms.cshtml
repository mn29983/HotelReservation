@model IEnumerable<HotelReservation.Models.Room>

<h2>All Rooms</h2>

<a asp-action="Create" class="btn btn-primary">Create New Room</a>

<table class="table">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Type</th>
            <th>Description</th>
            <th>Capacity</th>
            <th>Price</th>
            <th>Available</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Type</td>
                <td>@room.Description</td>
                <td>@room.Capacity</td>
                <td>@room.Price</td>
                <td>@room.Available</td>
                <td>
                    <a asp-action="Update" asp-route-id="@room.RoomId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@room.RoomId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>