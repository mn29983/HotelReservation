@{
}
@model HotelReservation.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100" style="background-color: #202528;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                    <form asp-action="Login" method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #856049;"></i>
                                        <span class="h1 fw-bold mb-0">Logo</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                        <div asp-validation-summary="All" class="text-danger"></div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="Username"></label>
                                            <input asp-for="Username" class="form-control" />
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="Password"></label>
                                            <input asp-for="Password" type="password" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="form-group form-check">
                                            <input asp-for="RememberMe" class="form-check-input" />
                                            <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button type="submit" class="btn btn-dark btn-lg btn-block">Login</button>
                                        </div>

                                    <a class="small text-muted"  style="color: dimgrey;">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: black;"> 
                                        Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register" style="color: indianred;"> Register here</a>
                                    </p>
                                    </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>