@model HotelReservation.Models.ViewModels.UsersViewModel


<h2>Make Admin</h2>

<h3>Are you sure you want to make this user an admin?</h3>
<div>
    <h4>User ID: @Model.UserId</h4>
    <h4>Username: @Model.Username</h4>
    <h4>Email: @Model.Email</h4>
</div>

<form asp-controller="Account" asp-action="MakeAdmin" asp-route-userId="@Model.UserId" method="post">
    <input type="submit" value="Make Admin" class="btn btn-success" />
    <a asp-action="ViewUsers">Back to User List</a>
</form>
